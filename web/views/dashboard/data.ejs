<%- include('../layout/main') %>

<div class="row">
    <!-- Page Header -->
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0">User Data Management</h1>
                <p class="text-muted">Manage and view all bot users</p>
            </div>
            <div>
                <a href="/data/export" class="btn btn-outline-success">
                    <i class="fas fa-download"></i>
                    Export Data
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Stats Summary -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-primary"><%= pagination.totalUsers %></h5>
                <p class="card-text">Total Users</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title text-info">Page <%= pagination.currentPage %></h5>
                <p class="card-text">of <%= pagination.totalPages %></p>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-users text-primary"></i>
                    User List
                </h5>
            </div>
            <div class="card-body">
                <% if (users.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <h5>No Users Found</h5>
                        <p class="text-muted">No users have interacted with the bot yet.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Phone Number</th>
                                    <th>Messages</th>
                                    <th>Last Seen</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(user => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar me-3">
                                                    <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-bold"><%= user.name || 'Unknown' %></div>
                                                    <% if (user.isOwner) { %>
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-crown"></i> Owner
                                                        </span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <code><%= user.jid.replace('@s.whatsapp.net', '') %></code>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= user.messageCount || 0 %></span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= user.lastSeen ? new Date(user.lastSeen).toLocaleString() : 'Never' %>
                                            </small>
                                        </td>
                                        <td>
                                            <% if (user.isBanned) { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-ban"></i> Banned
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check"></i> Active
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-primary" onclick="viewUser('<%= user.jid %>')">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-warning" onclick="editUser('<%= user.jid %>')">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <% if (!user.isOwner) { %>
                                                    <button class="btn btn-sm btn-outline-danger" onclick="deleteUser('<%= user.jid %>')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination.totalPages > 1) { %>
                        <nav aria-label="User pagination">
                            <ul class="pagination justify-content-center mt-4">
                                <% if (pagination.hasPrev) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                <% } %>
                                
                                <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                
                                <% if (pagination.hasNext) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- User Details Modal -->
<div class="modal fade" id="userModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">User Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="userDetails">Loading...</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editUserForm">
                    <div class="mb-3">
                        <label for="userName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="userName" name="name">
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="userBanned" name="isBanned">
                            <label class="form-check-label" for="userBanned">
                                Banned
                            </label>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="userOwner" name="isOwner">
                            <label class="form-check-label" for="userOwner">
                                Owner
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveUser()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<script>
let currentUserJid = null;

function viewUser(jid) {
    fetch(`/data/api/user/${jid}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const user = data.data;
                document.getElementById('userDetails').innerHTML = `
                    <div class="row">
                        <div class="col-6"><strong>Name:</strong></div>
                        <div class="col-6">${user.name || 'Unknown'}</div>
                    </div>
                    <div class="row">
                        <div class="col-6"><strong>Phone:</strong></div>
                        <div class="col-6"><code>${user.jid.replace('@s.whatsapp.net', '')}</code></div>
                    </div>
                    <div class="row">
                        <div class="col-6"><strong>Messages:</strong></div>
                        <div class="col-6">${user.messageCount || 0}</div>
                    </div>
                    <div class="row">
                        <div class="col-6"><strong>Created:</strong></div>
                        <div class="col-6">${new Date(user.createdAt).toLocaleString()}</div>
                    </div>
                    <div class="row">
                        <div class="col-6"><strong>Last Seen:</strong></div>
                        <div class="col-6">${user.lastSeen ? new Date(user.lastSeen).toLocaleString() : 'Never'}</div>
                    </div>
                    <div class="row">
                        <div class="col-6"><strong>Status:</strong></div>
                        <div class="col-6">
                            ${user.isBanned ? '<span class="badge bg-danger">Banned</span>' : '<span class="badge bg-success">Active</span>'}
                            ${user.isOwner ? '<span class="badge bg-warning ms-1">Owner</span>' : ''}
                        </div>
                    </div>
                `;
                new bootstrap.Modal(document.getElementById('userModal')).show();
            }
        })
        .catch(error => {
            console.error('Error fetching user:', error);
            alert('Failed to load user details');
        });
}

function editUser(jid) {
    currentUserJid = jid;
    fetch(`/data/api/user/${jid}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const user = data.data;
                document.getElementById('userName').value = user.name || '';
                document.getElementById('userBanned').checked = user.isBanned || false;
                document.getElementById('userOwner').checked = user.isOwner || false;
                new bootstrap.Modal(document.getElementById('editUserModal')).show();
            }
        })
        .catch(error => {
            console.error('Error fetching user:', error);
            alert('Failed to load user details');
        });
}

function saveUser() {
    if (!currentUserJid) return;
    
    const formData = new FormData(document.getElementById('editUserForm'));
    const updateData = {
        name: formData.get('name'),
        isBanned: document.getElementById('userBanned').checked,
        isOwner: document.getElementById('userOwner').checked
    };
    
    fetch(`/data/api/user/${currentUserJid}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(updateData)
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('User updated successfully');
            location.reload();
        } else {
            alert('Failed to update user: ' + data.error);
        }
    })
    .catch(error => {
        console.error('Error updating user:', error);
        alert('Failed to update user');
    });
}

function deleteUser(jid) {
    if (confirm('Are you sure you want to delete this user?')) {
        fetch(`/data/api/user/${jid}`, {
            method: 'DELETE'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('User deleted successfully');
                location.reload();
            } else {
                alert('Failed to delete user: ' + data.error);
            }
        })
        .catch(error => {
            console.error('Error deleting user:', error);
            alert('Failed to delete user');
        });
    }
}
</script>