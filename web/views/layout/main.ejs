<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            margin: 0.2rem 0;
            transition: all 0.3s ease;
        }
        
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background: rgba(255,255,255,0.2);
            color: white;
            transform: translateX(5px);
        }
        
        .sidebar .nav-link i {
            width: 20px;
            margin-right: 10px;
        }
        
        .main-content {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        
        .stat-card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        
        .navbar-brand {
            font-weight: bold;
            color: #667eea !important;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -250px;
                width: 250px;
                z-index: 1050;
                transition: left 0.3s ease;
            }
            
            .sidebar.show {
                left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 sidebar p-3" id="sidebar">
                <div class="text-center text-white mb-4">
                    <h4><i class="fas fa-robot"></i> SeaBot</h4>
                    <small class="text-white-50">Dashboard v1.0</small>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link <%= title.includes('Dashboard') ? 'active' : '' %>" href="/dashboard">
                            <i class="fas fa-tachometer-alt"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= title.includes('Data') ? 'active' : '' %>" href="/data">
                            <i class="fas fa-users"></i>
                            Data
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= title.includes('Command') ? 'active' : '' %>" href="/command">
                            <i class="fas fa-code"></i>
                            Commands
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= title.includes('Configuration') ? 'active' : '' %>" href="/config">
                            <i class="fas fa-cog"></i>
                            Configuration
                        </a>
                    </li>
                    <li class="nav-item mt-3">
                        <a class="nav-link text-warning" href="/auth/logout">
                            <i class="fas fa-sign-out-alt"></i>
                            Logout
                        </a>
                    </li>
                </ul>
            </nav>
            
            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 main-content">
                <!-- Top Navigation -->
                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom mb-4">
                    <div class="container-fluid">
                        <button class="btn btn-outline-primary d-md-none me-2" type="button" onclick="toggleSidebar()">
                            <i class="fas fa-bars"></i>
                        </button>
                        
                        <a class="navbar-brand" href="/dashboard">
                            <i class="fas fa-robot"></i> SeaBot Dashboard
                        </a>
                        
                        <div class="navbar-nav ms-auto">
                            <span class="nav-link">
                                <i class="fas fa-user-circle"></i>
                                Admin
                            </span>
                        </div>
                    </div>
                </nav>
                
                <!-- Page Content -->
                <div class="container-fluid">
                    <%- body %>
                </div>
            </main>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('show');
        }
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const toggleButton = event.target.closest('.btn');
            
            if (!sidebar.contains(event.target) && !toggleButton && window.innerWidth <= 768) {
                sidebar.classList.remove('show');
            }
        });
        
        // Auto-refresh stats every 30 seconds
        if (window.location.pathname === '/dashboard') {
            setInterval(function() {
                fetch('/dashboard/api/stats')
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Update stats elements
                            const elements = {
                                'total-users': data.data.totalUsers,
                                'total-commands': data.data.totalCommands,
                                'active-users': data.data.activeUsers,
                                'uptime': data.data.uptimeFormatted
                            };
                            
                            Object.keys(elements).forEach(id => {
                                const element = document.getElementById(id);
                                if (element) {
                                    element.textContent = elements[id];
                                }
                            });
                        }
                    })
                    .catch(error => console.error('Error refreshing stats:', error));
            }, 30000);
        }
    </script>
</body>
</html>