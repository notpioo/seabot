<!-- Dashboard uses layout -->
<% 
  // Set page-specific data
  const pageTitle = 'Dashboard Overview';
  const pageDescription = 'Real-time monitoring of SeaBot performance';
  const pageIcon = 'fas fa-tachometer-alt';
%>

<!-- Page Header -->
<div class="page-header">
    <div class="page-icon">
        <i class="fas fa-tachometer-alt"></i>
    </div>
    <h1>Dashboard Overview</h1>
    <p class="page-description">Real-time monitoring of SeaBot performance</p>
    <div class="last-updated">
        <i class="fas fa-clock"></i>
        Last updated: <span id="last-update">Now</span>
    </div>
</div>

<div class="main-content">
    <div class="container-fluid py-4">

        <!-- Statistics Cards -->
        <div class="stats-grid mb-4">
            <!-- Total Users -->
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-value" id="total-users"><%= stats.totalUsers %></div>
                <div class="stat-label">Total Users</div>
            </div>

            <!-- Total Commands -->
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-code"></i>
                </div>
                <div class="stat-value" id="total-commands"><%= stats.totalCommands %></div>
                <div class="stat-label">Active Commands</div>
            </div>

            <!-- Total Used Commands -->
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-terminal"></i>
                </div>
                <div class="stat-value" id="used-commands"><%= stats.totalUsedCommands %></div>
                <div class="stat-label">Commands Used</div>
            </div>

            <!-- Uptime -->
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div class="stat-value" id="uptime"><%= stats.uptimeFormatted %></div>
                <div class="stat-label">System Uptime</div>
            </div>
        </div>

        <!-- System Information -->
        <div class="row mb-4">
            <!-- Bot Status -->
            <div class="col-lg-6 mb-4">
                <div class="content-card">
                    <div class="card-header">
                        <h3>
                            <i class="fas fa-robot"></i>
                            Bot Status
                        </h3>
                        <p>Current WhatsApp bot status and system information</p>
                    </div>
                    <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Status:</strong>
                                    <span class="badge bg-success ms-2">
                                        <i class="fas fa-check-circle"></i> Online
                                    </span>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Node.js:</strong>
                                    <span class="text-muted"><%= stats.nodeVersion %></span>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Memory Usage:</strong>
                                    <div class="text-muted">
                                        <small>RSS: <%= stats.memoryFormatted.rss %></small><br>
                                        <small>Heap Used: <%= stats.memoryFormatted.heapUsed %></small>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Database:</strong>
                                    <span class="badge bg-success">
                                        <i class="fas fa-database"></i> Connected
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <!-- Quick Actions -->
            <div class="col-lg-6 mb-4">
                <div class="content-card">
                    <div class="card-header">
                        <h3>
                            <i class="fas fa-bolt"></i>
                            Quick Info
                        </h3>
                        <p>Important information and quick access</p>
                    </div>
                    <div class="card-body">
                            <div class="alert alert-info" role="alert">
                                <h6 class="alert-heading">WhatsApp Bot Active!</h6>
                                <p class="mb-0">Your bot is running and ready to receive commands. Try sending <code>.ping</code> to test it.</p>
                            </div>
                            <div class="alert alert-success" role="alert">
                                <h6 class="alert-heading">Supported Prefixes</h6>
                                <p class="mb-0">Bot responds to: <code>.</code> <code>!</code> <code>#</code> <code>/</code></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        <!-- System Details -->
        <div class="row">
            <div class="col-12">
                <div class="content-card">
                    <div class="card-header">
                        <h3>
                            <i class="fas fa-info-circle"></i>
                            System Information
                        </h3>
                        <p>Detailed system metrics and performance data</p>
                    </div>
                    <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <h6>Memory Details</h6>
                                    <ul class="list-unstyled">
                                        <li><small><strong>RSS:</strong> <%= stats.memoryFormatted.rss %></small></li>
                                        <li><small><strong>Heap Total:</strong> <%= stats.memoryFormatted.heapTotal %></small></li>
                                        <li><small><strong>Heap Used:</strong> <%= stats.memoryFormatted.heapUsed %></small></li>
                                        <li><small><strong>External:</strong> <%= stats.memoryFormatted.external %></small></li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <h6>Login Session</h6>
                                    <ul class="list-unstyled">
                                        <li><small><strong>Login Time:</strong> <%= new Date(user.loginTime).toLocaleString() %></small></li>
                                        <li><small><strong>Session Active:</strong> <%= Math.floor((Date.now() - new Date(user.loginTime)) / 1000 / 60) %> minutes</small></li>
                                    </ul>
                                </div>
                                <div class="col-md-4">
                                    <h6>Bot Runtime</h6>
                                    <ul class="list-unstyled">
                                        <li><small><strong>Uptime:</strong> <%= stats.uptimeFormatted %></small></li>
                                        <li><small><strong>Platform:</strong> <%= process.platform %></small></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<style>
.last-updated {
    position: absolute;
    top: 1.5rem;
    right: 2rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
}

.last-updated i {
    margin-right: 0.5rem;
}

@media (max-width: 768px) {
    .last-updated {
        position: static;
        margin-top: 1rem;
        text-align: center;
    }
}
</style>
    
    <script>
    // Store server start time
    const serverStartTime = <%= Date.now() - (process.uptime() * 1000) %>;
    
    function formatUptime(uptimeSeconds) {
        const days = Math.floor(uptimeSeconds / (24 * 3600));
        const hours = Math.floor((uptimeSeconds % (24 * 3600)) / 3600);
        const minutes = Math.floor((uptimeSeconds % 3600) / 60);
        const seconds = Math.floor(uptimeSeconds % 60);
        
        return String(days).padStart(2, '0') + ':' + 
               String(hours).padStart(2, '0') + ':' + 
               String(minutes).padStart(2, '0') + ':' + 
               String(seconds).padStart(2, '0');
    }
    
    // Update uptime and timestamp every second
    setInterval(() => {
        // Update timestamp
        document.getElementById('last-update').textContent = new Date().toLocaleTimeString();
        
        // Update uptime
        const currentTime = Date.now();
        const uptimeSeconds = (currentTime - serverStartTime) / 1000;
        document.getElementById('uptime').textContent = formatUptime(uptimeSeconds);
    }, 1000);
    </script>